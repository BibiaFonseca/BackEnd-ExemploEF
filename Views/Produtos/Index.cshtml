@model IEnumerable<ExemploEF.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="fw-bold">Produtos</h1>
        <p class="text-muted">Gerencie os produtos cadastrados no sistema.</p>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success rounded-3 fw-bold">
            <i class="bi bi-plus-circle"></i> Adicionar produtos
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Estoque)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Categoria)
                    </th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estoque)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.Nome)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.ProdutoId" class="btn btn-warning btn-sm rounded-3">
                                <i class="bi bi-pencil me-1"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ProdutoId" class="btn btn-info btn-sm rounded-3 text-white">
                                <i class="bi bi-eye me-1"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ProdutoId" class="btn btn-danger btn-sm rounded-3">
                                <i class="bi bi-trash me-1"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

