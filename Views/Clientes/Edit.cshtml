@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="fw-bold">Editar</h1>
        <p class="text-muted">Edite os clientes cadastrados no sistema.</p>
    </div>

<hr />
<div class="row container mt-4 p-4 bg-light rounded shadow">
        <h4>Cliente</h4>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label"></label>
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex justify-content-end mb-3">
                    <input type="submit" value="Salvar" class="btn btn-success rounded-3 fw-bold">
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
