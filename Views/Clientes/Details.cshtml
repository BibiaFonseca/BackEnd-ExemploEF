@model ExemploEF.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="fw-bold">Detalhes</h1>
        <p class="text-muted">Gerencie os clientes cadastrados no sistema.</p>
    </div>
<div>
    
    <hr />
    <dl class="row container mt-4 p-4 bg-light rounded shadow">
            <h4>Cliente</h4>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ClienteId">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
