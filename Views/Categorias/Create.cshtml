@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Criar";
}

<div class="container mt-4">        
    <div class="text-center">
        <h1 class="fw-bold">Criar</h1>
        <p class="text-muted">Crie novas categorias no sistema.</p>
    </div>

<hr />
    <div class="row container mt-4 p-4 bg-light rounded shadow">
    
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
                <div class="d-flex justify-content-end mb-3">
                <input type="submit" value="Salvar" class="btn btn-success rounded-3 fw-bold"
                </div>
        </form>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
