@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="fw-bold">Deletar</h1>
        <p class="text-muted">Delete categorias do sistema.</p>
    </div>
<div>

        <dl class="row container mt-4 p-4 bg-light rounded shadow">
            <h4>Categoria</h4>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index">Voltar</a>
    </form>
</div>

