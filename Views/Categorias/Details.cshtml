@model ExemploEF.Models.Categoria

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="text-center">
        <h1 class="fw-bold">Detalhes</h1>
        <p class="text-muted">Gerencie os detalhes das categorias no sistema.</p>
    </div>

<div>
    
    <hr />
    <dl class="row container mt-4 p-4 bg-light rounded shadow">
            <h4>Categoria</h4>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CategoriaId">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
